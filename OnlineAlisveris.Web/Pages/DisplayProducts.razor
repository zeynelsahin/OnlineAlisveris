@inherits DisplayProductBase
@foreach (var productDto in Products)
{
    <div class="col-md-3 mb-2">
        <a href="/ProductDetails/@productDto.Id">
            <div class="card">
                <img class="img-thumbnail" src="@productDto.ImageURl"/>
                <div class="card-body">
                    <h5 class="card-title mb-3">@productDto.Name</h5>
                    <p class="card-text">
                        <b>@productDto.Price.ToString("C")</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}